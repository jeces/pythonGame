<LoginScreen>:
    orientation: 'vertical'
    padding: 50

    BoxLayout:
        size_hint: 1, 0.8
        spacing: 10

        Label:
            text: 'Username'
            font_size: '18sp'
            size_hint_x: 0.3
            halign: 'right'
            valign: 'middle'

        TextInput:
            id: username_entry
            hint_text: 'Enter your email'
            font_size: '18sp'
            size_hint_x: 0.7
            multiline: False
            on_text: root.validate_email()
            on_focus: root.validate_email() if not self.focus else None
            on_text_validate: root.validate_email()

    BoxLayout:
        size_hint: 1, 0.8
        spacing: 10

        Label:
            text: 'Password'
            font_size: '18sp'
            size_hint_x: 0.3
            halign: 'right'
            valign: 'middle'

        TextInput:
            id: password_entry
            hint_text: 'Enter your password'
            font_size: '18sp'
            size_hint_x: 0.7
            multiline: False
            password: True
            on_text: root.clear_text(self) if self.text else None

    BoxLayout:
        size_hint: 1, 0.8
        spacing: 10

        CheckBox:
            id: save_checkbox
            size_hint_x: None
            width: '30sp'
            active: False

        Label:
            text: 'Save ID'
            font_size: '18sp'
            size_hint_x: 0.7
            halign: 'left'
            valign: 'middle'

    BoxLayout:
        size_hint: 1, 0.8
        spacing: 10

        CheckBox:
            id: auto_login_checkbox
            size_hint_x: None
            width: '30sp'
            active: False

        Label:
            text: 'Auto Login'
            font_size: '18sp'
            size_hint_x: 0.7
            halign: 'left'
            valign: 'middle'

    Label:
        id: warning_label
        size_hint: 1, 0.8
        markup: True


GameLoginApp().run()
