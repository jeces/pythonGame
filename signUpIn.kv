<CustomTextInput@TextInput>:
    font_name: 'Arial'
    multiline: False
    padding: [10, 10, 10, 10]
    size_hint: None, None
    size: 200, 40
    background_normal: ''
    background_active: ''
    background_color: (1, 1, 1, 1)
    foreground_color: (0, 0, 0, 1)

<CustomLabel@Label>:
    font_name: 'Arial'
    size_hint: None, None
    size: self.texture_size
    color: (0, 0, 0, 1)

<LoginScreen>:
    FloatLayout:
        size_hint: None, None
        size: 300, 300
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            orientation: 'vertical'
            spacing: '3dp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            CustomTextInput:
                id: email_entry
                hint_text: 'Email'
                font_name: 'Roboto'
                font_size: 18
                multiline: False
                width: '310dp'
                on_text: root.validate_email(); root.on_textinput()

            CustomLabel:
                id: warning_label
                text: ''
                font_name: 'Roboto'
                font_size: 12
                color: (1, 0, 0, 1)

            CustomTextInput:
                id: password_entry
                hint_text: 'Password'
                font_name: 'Roboto'
                font_size: 18
                multiline: False
                password: True
                width: '310dp'
                on_text: root.on_textinput()

            GridLayout:
                cols: 1
                spacing: '10dp'
                pos_hint: {'center_x': 0.5}
                padding: [-20, 20, 0, 50]
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: '10dp'
                    Label:
                        text: ''
                    Label:
                        text: ''
                    Label:
                        text: ''
                    CheckBox:
                        id: save_id_checkbox
                    Label:
                        text: 'Remember Me'
                        font_name: 'Roboto'
                        size_hint_y: None
                        height: self.texture_size[1]
                        valign: 'middle'
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: '10dp'
                    Label:
                        text: ''
                    Label:
                        text: ''
                    Label:
                        text: ''
                    CheckBox:
                        id: auto_login_checkbox
                    Label:
                        text: 'Auto Login'
                        font_name: 'Roboto'
                        size_hint_y: None
                        height: self.texture_size[1]
                        valign: 'middle'

            GridLayout:
                cols: 2
                spacing: '10dp'
                pos_hint: {'center_x': 0.5}

                Button:
                    text: 'Sign Up'
                    font_name: 'Roboto'
                    font_size: 18
                    size_hint: None, None
                    #size: self.texture_size
                    height: '30dp'
                    width: '150dp'
                    on_release: root.open_signup_modal()

                Button:
                    text: 'Sign In'
                    font_name: 'Roboto'
                    font_size: 18
                    size_hint: None, None
                    #size: self.texture_size
                    height: '30dp'
                    width: '150dp'
                    on_release: root.login()



<SignUpModal>:
    size_hint: 0.8, 0.8
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        padding: [20, 20, 20, 20]
        spacing: 10

        CustomTextInput:
            id: email_input
            hint_text: 'Email'
            on_text_validate: self.focus = False
            size_hint_y: None
            height: '40dp'

        CustomTextInput:
            id: password_input
            hint_text: 'Password'
            password: True
            on_text_validate: self.focus = False
            size_hint_y: None
            height: '40dp'

        CustomTextInput:
            id: confirm_password_input
            hint_text: 'Confirm Password'
            password: True
            on_text_validate: self.focus = False
            size_hint_y: None
            height: '40dp'

        CustomTextInput:
            id: name_input
            hint_text: 'Name'
            on_text_validate: self.focus = False
            size_hint_y: None
            height: '40dp'

        CustomTextInput:
            id: dob_input
            hint_text: 'Date of Birth'
            on_text_validate: self.focus = False
            size_hint_y: None
            height: '40dp'

        Widget:
            size_hint_y: 0.5

        GridLayout:
            cols: 2
            spacing: 10
            size_hint_y: None
            height: '50dp'

            Button:
                text: 'Sign Up'
                size_hint: 1, None
                height: '50dp'
                on_release: root.show_confirmation()

            Button:
                text: 'Cancel'
                size_hint: 1, None
                height: '50dp'
                on_release: root.dismiss()


<ConfirmationModal>:
    size_hint: 0.6, 0.4
    BoxLayout:
        orientation: 'vertical'
        padding: '40dp'
        spacing: '20dp'
        Label:
            text: 'Are you sure you want to complete membership registration?'
            font_size: '20sp'
            bold: True
        BoxLayout:
            orientation: 'horizontal'
            padding: '20dp'
            spacing: '20dp'
            Button:
                text: 'Yes'
                on_release: root.close_confirmation(True)
            Button:
                text: 'No'
                on_release: root.close_confirmation(False)