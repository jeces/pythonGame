<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        RhythmGame:
            id: game
            size_hint: 1, 0.8


<RhythmGame>:
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:  # 화면을 수평으로 나누는 BoxLayout 추가
        orientation: "horizontal"
        size_hint: 1, 1

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.3, 1

            Label:
                id: score_label
                text: "Score: " + str(root.score)
                pos_hint: {"center_x": 0.5, "top": 1}
                size_hint: 1, 0.1
                font_size: '30sp'

            Label:
                id: song_label
                text: "Now Playing: " + root.song
                font_size: '24sp'

        BoxLayout:
        orientation: "vertical"
        size_hint: 0.7, 1
        padding: '10dp'

        GridLayout:
            cols: 4
            spacing: '10dp'
            padding: '10dp'

            BoxLayout:
                id: block_layout
                size_hint: 1, None
                height: self.minimum_height  # 블록 높이를 자동으로 조정

            ProgressBar:
                id: progress_bar
                max: 100
                value: root.progress

            Button:
                id: button_1
                text: "Button 1"
                size_hint: 1, None
                size: 10, 10
                on_release: root.check_hit(1)

            Button:
                id: button_2
                text: "Button 2"
                size_hint: 1, None
                size: 10, 10
                on_release: root.check_hit(2)

            Button:
                id: button_3
                text: "Button 3"
                size_hint: 1, None
                size: 10, 10
                on_release: root.check_hit(3)

            Button:
                id: button_4
                text: "Button 4"
                size_hint: 1, None
                size: 10, 10
                on_release: root.check_hit(4)



<Block>:
    size_hint: 1, None
    size: 10, 10
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
