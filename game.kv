<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        RhythmGame:
            id: game
            size_hint: 1, 0.8

<RhythmGame>:
    canvas:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'

        Label:
            id: score_label
            text: "Score: {}".format(root.score)
            size_hint_y: None
            height: '50dp'
            font_size: '36sp'
            bold: True
            color: 1, 1, 1, 1  # 텍스트 색상 설정

        Label:
            id: song_label
            text: "Now Playing: {}".format(root.song)
            size_hint_y: None
            height: '30dp'
            font_size: '24sp'
            color: 0.7, 0.7, 0.7, 1  # 텍스트 색상 설정

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.7

            ProgressBar:
                id: progress_bar
                max: 100
                value: root.progress
                size_hint_y: None
                height: '20dp'
                background_color: 0.2, 0.2, 0.2, 1  # 프로그레스 바 배경색 설정

            GridLayout:
                cols: 1
                spacing: '10dp'
                padding: '10dp'

                BoxLayout:
                    id: block_layout
                    size_hint: 1, None
                    height: self.minimum_height

            GridLayout:
                cols: 4
                spacing: '10dp'
                padding: '10dp'

                Button:
                    id: button_1
                    text: "1"
                    size_hint: 0.5, None
                    height: '60dp'
                    font_size: '24sp'
                    bold: True
                    background_color: 0.2, 0.6, 0.3, 1  # 버튼 배경색 설정
                    on_release: root.check_hit(1)

                Button:
                    id: button_2
                    text: "2"
                    size_hint: 0.5, None
                    height: '60dp'
                    font_size: '24sp'
                    bold: True
                    background_color: 0.2, 0.6, 0.3, 1  # 버튼 배경색 설정
                    on_release: root.check_hit(2)

                Button:
                    id: button_3
                    text: "3"
                    size_hint: 0.5, None
                    height: '60dp'
                    font_size: '24sp'
                    bold: True
                    background_color: 0.2, 0.6, 0.3, 1  # 버튼 배경색 설정
                    on_release: root.check_hit(3)

                Button:
                    id: button_4
                    text: "4"
                    size_hint: 0.5, None
                    height: '60dp'
                    font_size: '24sp'
                    bold: True
                    background_color: 0.2, 0.6, 0.3, 1  # 버튼 배경색 설정
                    on_release: root.check_hit(4)

<Block>:
    size_hint: None, None
    size: '60dp', '60dp'
    canvas:
        Color:
            rgba: 0.8, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size
